{
    "extends": [
        "config:recommended"
    ],
    "enabledManagers": [
        "helm-values",
        "helmv3"
    ],
    "pinDigests": true,
    "prHourlyLimit": 5,
    "prConcurrentLimit": 5,
    "timezone": "Europe/Berlin",
    "assignees": [
        "slydlake"
    ],
    "helm-values": {
        "managerFilePatterns": [
            "/(^|/)values\\.ya?ml$/",
            "/samples/values\\.ya?ml$/"
        ]
    },
    "packageRules": [
        {
            "matchManagers": [
                "helm-values"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch",
                "digest"
            ],
            "matchPackageNames": [
                "/^docker\\.io\\/.+/"
            ],
            "labels": [
                "dependencies",
                "renovate"
            ],
            "commitMessagePrefix": "[{{{ replace \"docker.io/\" \"\" packageName }}}]",
            "commitMessageAction": "chore(deps): update"
        },
        {
            "matchManagers": [
                "helm-values"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch",
                "digest"
            ],
            "labels": [
                "dependencies",
                "renovate"
            ],
            "commitMessagePrefix": "[{{{ packageName }}}]",
            "commitMessageAction": "chore(deps): update",
            "matchPackageNames": [
                "!/^docker\\.io\\/.+/"
            ]
        },
        {
            "matchManagers": [
                "helm-values"
            ],
            "matchPackageNames": [
                "lusotycoon/apache-exporter",
                "/^docker\\.io\\/lusotycoon\\/apache-exporter$/"
            ],
            "allowedVersions": "/^v[0-9]+\\.[0-9]+\\.[0-9]+$/",
            "automerge": false,
            "groupName": "apache-exporter updates (v-prefixed semver)"
        },
        {
            "matchManagers": [
                "helmv3"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "labels": [
                "dependencies",
                "renovate",
                "helm-chart"
            ],
            "commitMessagePrefix": "[helm]",
            "commitMessageAction": "chore(deps): update chart dependencies"
        }
    ]
}
