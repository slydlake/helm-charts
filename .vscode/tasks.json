{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Apply Wordpress ConfigMap in Cluster",
            "type": "shell",
            "command": "helm template ${input:releaseName} -n ${input:namespace} . --values <(helm -n ${input:namespace} get values ${input:releaseName} -o yaml) --show-only templates/configmap.yaml | kubectl apply -n ${input:namespace} -f -",
            "options": {
                "cwd": "${workspaceFolder}/charts/wordpress"
            },
            "problemMatcher": []
        },
        {
            "label": "Install test chart",
            "type": "shell",
            "command": "helm install ${input:chart} -n ${input:namespace} . --values ./samples/${input:valuesFile} --create-namespace",
            "options": {
                "cwd": "${workspaceFolder}/charts/${input:chart}"
            },
            "problemMatcher": []
        },
        {
            "label": "Upgrade test chart",
            "type": "shell",
            "command": "helm upgrade ${input:chart} -n ${input:namespace} . --values ./samples/${input:valuesFile}",
            "options": {
                "cwd": "${workspaceFolder}/charts/${input:chart}"
            },
            "problemMatcher": []
        },
        {
            "label": "Uninstall test chart",
            "type": "shell",
            "command": "helm uninstall ${input:chart} -n ${input:namespace}; kubectl delete pvc -n ${input:namespace} -l app.kubernetes.io/instance=${input:chart}; kubectl get pvc -n ${input:namespace} -o json | jq -r '.items[] | select(.metadata.annotations[\"meta.helm.sh/release-name\"] == \"'${input:chart}'\") | .metadata.name' | xargs -r kubectl delete pvc -n ${input:namespace}",
            "options": {
                "cwd": "${workspaceFolder}/charts/${input:chart}"
            },
            "problemMatcher": []
        },
        {
            "label": "Reinstall test chart",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Uninstall test chart",
                "Install test chart"
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "releaseName",
            "description": "Release Name",
            "default": "helm-release-name",
            "type": "promptString"
        },
        {
            "id": "namespace",
            "description": "Namespace",
            "default": "namespace",
            "type": "promptString"
        },
        {
            "id": "chart",
            "description": "Chart",
            "type": "pickString",
            "options": [
                "wg-easy",
                "wireguard",
                "wordpress"
            ]
        },
        {
            "id": "valuesFile",
            "description": "Values File (e.g., simple.values.yaml)",
            "type": "promptString",
            "default": "simple.values.yaml"
        }
    ]
}